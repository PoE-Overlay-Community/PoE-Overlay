{
  "name": "poe-overlay",
  "version": "1.0.0",
  "description": "An Overlay for Path of Exile. Built with Electron and Angular.",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.js",
    "ng": "ng",
    "start": "electron .",
    "build:main": "vite build --config ./projects/main/vite.config.ts",
    "build:preload": "vite build --config ./projects/preload/vite.config.ts",
    "build:renderer": "ng build -c production",
    "build": "cross=env MODE=production concurrently npm:build:*",
    "dev": "concurrently -k npm:dev:*",
    "dev:angular": "ng serve --watch --configuration development",
    "dev:electron": "wait-on http-get://localhost:4200/ && tsx ./scripts/electron.ts",
    "electron:build": "npm run build && electron-builder build --linux --windows",
    "electron:deploy": "npm run build && electron-builder build --win --publish always",
    "electron:deps": "electron-builder install-app-deps",
    "electron:linux": "npm run build && electron-builder build --linux",
    "electron:version": "electron -v && electron -a",
    "electron:windows": "npm run build && electron-builder build --windows",
    "package": "npm run build && electron-builder build --config electron-builder.yml",
    "vite": "vite",
    "test": "ng test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PoE-Overlay-Community/PoE-Overlay-Community-Fork.git"
  },
  "author": {
    "name": "PoE-Overlay-Community",
    "email": "noreply@poe-overlay-community.com"
  },
  "bugs": {
    "url": "https://github.com/PoE-Overlay-Community/PoE-Overlay-Community-Fork/issues"
  },
  "homepage": "https://github.com/PoE-Overlay-Community/PoE-Overlay-Community-Fork",
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/cdk": "^17.1.2",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/material": "^17.1.2",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "@electron/remote": "^2.1.2",
    "@hurdlegroup/robotjs": "^0.11.4",
    "@miniben90/x-win": "^1.7.0",
    "@ngx-translate/core": "^15.0.0",
    "@stroncium/procfs": "^1.2.1",
    "@swimlane/ngx-charts": "^20.5.0",
    "auto-launch": "^5.0.6",
    "concurrently": "^8.2.2",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.7",
    "localforage": "^1.10.0",
    "moment": "^2.30.1",
    "ngx-color-picker": "^16.0.0",
    "node-window-manager": "^2.2.4",
    "path-browserify": "^1.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uiohook-napi": "^1.5.3",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.2",
    "@angular/cli": "^17.1.2",
    "@angular/compiler-cli": "^17.1.0",
    "@angular/language-service": "^17.1.3",
    "@types/auto-launch": "^5.0.5",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.11.16",
    "@types/stroncium__procfs": "^1.2.4",
    "cross-env": "^7.0.3",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "tsx": "^4.7.1",
    "typescript": "~5.3.2",
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "wait-on": "^7.2.0"
  },
  "browser": {
    "fs": false,
    "path": false
  }
}
