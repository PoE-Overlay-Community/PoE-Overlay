{
    "productName": "poe-overlay",
    "publish": {
        "provider": "github"
    },
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**"
    ],
    "win": {
        "icon": "dist/favicon.ico",
        "target": [
            "nsis",
            "portable"
        ],
        "publisherName": [
            "SignPath Foundation"
        ],
        "signAndEditExecutable": true
    },
    "linux": {
        "icon": "dist/renderer/browser/favicon256x256.png",
        "target": [
            "deb",
            "AppImage"
        ],
        "category": "Utility"
    },
    "nsis": {
        "allowToChangeInstallationDirectory": true,
        "perMachine": true,
        "oneClick": false,
        "shortcutName": "PoE Overlay"
    }
}
